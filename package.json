{
  "name": "@garee/next-starter",
  "description": "A starter template for Next.js web applications.",
  "version": "0.0.0",
  "author": "Gary Blackwood <gary@garyblackwood.co.uk",
  "homepage": "https://github.com/Garee/next-starter",
  "repository": {
    "type": "git",
    "url": "https://github.com/Garee/next-starter"
  },
  "bugs": "https://github.com/Garee/next-starter/issues",
  "license": "MIT",
  "keywords": [],
  "bin": {
    "next-starter": "./package/bin.js"
  },
  "scripts": {
    "clean": "rm -rf .next tsconfig.tsbuildinfo",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && npm run lint-ts && npm run lint-styles",
    "lint-styles": "stylelint **/*.scss",
    "lint-ts": "tsc --noEmit",
    "format": "prettier --write **/*.{js,json,ts,tsx,scss} !.next !public",
    "prepare": "husky install",
    "pre-commit": "lint-staged && npm run lint"
  },
  "dependencies": {
    "classnames": "2.3.1",
    "date-fns": "2.22.1",
    "gray-matter": "4.0.3",
    "next": "11.0.0",
    "next-pwa": "5.2.21",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remark": "13.0.0",
    "remark-html": "13.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@types/classnames": "2.3.1",
    "@types/react": "17.0.11",
    "eslint": "7.29.0",
    "eslint-config-next": "11.0.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "prettier": "2.3.1",
    "sass": "1.35.1",
    "stylelint": "13.13.1",
    "stylelint-config-recommended-scss": "4.2.0",
    "stylelint-scss": "3.19.0"
  },
  "lint-staged": {
    "*.{js,json,ts,tsx}": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint --fix"
    ]
  }
}
